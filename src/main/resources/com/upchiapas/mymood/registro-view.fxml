<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="panelRegistroUser" alignment="CENTER" prefHeight="475.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.upchiapas.mymood.controllers.RegistroController">
   <children>
      <Label text="Registro de Usuario">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <VBox prefWidth="100.0">
         <children>
            <Label text="Nombre">
               <font>
                  <Font size="15.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="txtNombreRegistro" prefHeight="30.0" promptText=" Ej. Francisco Escobar">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label text="Usuario">
               <font>
                  <Font size="15.0" />
               </font>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="txtUsuarioRegistro" prefHeight="30.0" promptText=" Ej. francisE">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <HBox>
               <children>
                  <VBox HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                     <children>
                        <Label text="Contraseña">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtPassword" prefHeight="30.0" promptText="Ej. 221193">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                     <children>
                        <Label text="Confirmar Contraseña">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtConfirmarPassword" prefHeight="30.0" promptText="Ej. 221193">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <Label text="Edad">
               <font>
                  <Font size="15.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="txtEdadRegistro" prefHeight="30.0" promptText=" Ej. 18">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <HBox alignment="TOP_CENTER">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="btnSignUp" mnemonicParsing="false" onMouseClicked="#btnSignUpOnMouseClicked" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: d0a924; -fx-border-radius: 8px; -fx-background-radius: 8px;" text="Registarse" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnRegresarR" mnemonicParsing="false" onMouseClicked="#btnRegresarROnMouseClicked" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #99A3A4; -fx-border-radius: 8px; -fx-background-radius: 8px;" text="Regresar" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets left="30.0" right="30.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
