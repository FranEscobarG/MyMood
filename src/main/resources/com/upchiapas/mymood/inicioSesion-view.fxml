<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="panelInicioSesion" alignment="CENTER" prefHeight="411.0" prefWidth="482.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.upchiapas.mymood.controllers.InicioSesionController">
   <children>
      <Label text="Iniciar Sesión">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <VBox prefHeight="164.0" prefWidth="496.0">
         <VBox.margin>
            <Insets left="50.0" right="50.0" />
         </VBox.margin>
         <children>
            <Label text="Usuario">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="txtUserInicioSesion" prefHeight="36.0" promptText="Ej. Admin">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label text="Contraseña">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <StackPane>
               <children>
                  <PasswordField fx:id="txtPasswordInicioSesion" prefHeight="36.0" promptText="Ej. 221193">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </PasswordField>
                  <TextField fx:id="txtPasswordInicioSesionMask" prefHeight="36.0" promptText="Ej. 221193">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
            </StackPane>
            <CheckBox fx:id="checkVerPassSing" mnemonicParsing="false" text="Ver Contraseña">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </CheckBox>
            <HBox alignment="TOP_CENTER" prefWidth="200.0">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="btnIngresar" mnemonicParsing="false" onMouseClicked="#btnIngresarOnMouseClicked" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: d0a924; -fx-border-radius: 8px; -fx-background-radius: 8px;" text="Ingresar" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnRegresar" mnemonicParsing="false" onMouseClicked="#btnRegresarOnMouseClicked" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #99A3A4; -fx-border-radius: 8px; -fx-background-radius: 8px;" text="Regresar" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
